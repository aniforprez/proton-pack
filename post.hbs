{{!< default}}

<div class="mdl-grid grid--max-width">
	<div class="mdl-cell mdl-cell--4-col mdl-cell--12-col-phone">
		<!-- Sticky About stuff goes here -->
	</div>
	<div class="mdl-cell mdl-cell--8-col mdl-cell--12-col-phone">
		<!-- Blog post goes here -->
		{{#post}}

		<div class="mdl-content mdl-color--white mdl-shadow--4dp">
			<article class="{{post_class}}">
				<header class="post-header">
					<h1 class="post-title">{{title}}</h1>
					<section class="post-meta">
						<time class="post-date" datetime="{{date format='YYYY-MM-DD'}}">
							{{date format="DD MMMM YYYY"}}
						</time>
						{{tags prefix=" on "}}
					</section>
				</header>
				<section class="post-content">
					{{content}}
				</section>
			</article>
		</div>

		{{/post}}
	</div>
</div>
