{{#foreach posts}}
	<div class="mdl-card mdl-cell mdl-cell--8-col mdl-cell--12-col-tablet mdl-cell--4-offset-desktop mdl-shadow--2dp">
		<a href="{{url}}" class="mdl-card__title--clickable">
			<div class="mdl-card__title mdl-card-row {{#if image}}mdl-card__title-image{{/if}}" {{#if image}}style="background: linear-gradient(to bottom, rgba(76,76,76,0) 45%, rgba(76,76,76,0.17) 65%, rgba(19,19,19,0.5) 100%), url('{{image}}') center / cover;"{{/if}}>
				<h2 class="mdl-card__title-text">
					{{title}}
				</h2>
			</div>
		</a>
		<div class="mdl-card--border">
			<div class="mdl-card__supporting-text mdl-card-row header-full-width">
				<div>
					{{#if author.image}}<img src="{{author.image}}" alt="{{author.name}}" class="mdl-image-rounded mdl-image-icon" />{{/if}}
					{{author}}
				</div>
				<div class="mdl-layout-spacer"></div>
				<time class="post-date" id="post-{{slug}}" datetime="{{date format='YYYY-MM-DD'}}">{{date timeago="true"}}</time>
				<div class="mdl-tooltip mdl-tooltip--top" for="post-{{slug}}">{{date format="DD MMMM YYYY"}}</div>
			</div>
		</div>
		<div class="mdl-card--border">
			<div class="mdl-card__supporting-text">
				<p>{{excerpt words="40"}}...</p>
			</div>
		</div>
		<div class="mdl-card--border mdl-card__actions mdl-card-row">
			<a class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect" href="{{url}}">
				Read More <i class="material-icons">chevron_right</i>
			</a>
			{{#if tags}}
				<div class="mdl-layout-spacer"></div>
				<div class="tag-row">
				{{#foreach tags limit="3"}}
					<a href="{{url}}" title="{{name}}" class="mdl-chip tag-spacer">
						<span class="mdl-chip__text">{{name}}</span>
					</a>
				{{/foreach}}
				</div>
			{{/if}}
		</div>
	</div>
{{/foreach}}
